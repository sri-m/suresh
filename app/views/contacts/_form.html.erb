<%= semantic_form_for @contact do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :as => :select, :collection => Customer.pluck(:name) %>
    <%= f.input :email, :input_html => { :size => 25 } %>
    <%= f.input :gender, :as => :radio, :collection => ["Male", "Female"] %>
    <%= f.input :cell, :input_html => { :size => 25 } %>
    <%= f.input :address,       :input_html => { :class => 'autogrow', :rows => 10, :cols => 22, :maxlength => 1000  } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
